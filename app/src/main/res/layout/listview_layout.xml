<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="335dp"
        android:layout_height="128dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cardView"
        android:onClick="opendetail"
        >

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="128dp">


            <ImageView
                android:id="@+id/gambarfood"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/nama"
                android:tag="namaproduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/gambarfood"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/gambarfood"
                android:layout_toRightOf="@+id/gambarfood"
                android:fontFamily="@font/roboto_bold"
                android:text="TextView"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nama"
                android:layout_alignStart="@+id/nama"
                android:layout_below="@+id/nama"
                android:fontFamily="@font/roboto"
                android:text="TextView"
                android:textColor="#38D0A4"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/gmblokasi"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/gambarfood"
                android:layout_alignLeft="@+id/harga"
                android:layout_alignStart="@+id/harga"
                app:srcCompat="@drawable/ic_location_on_black_24px" />

            <ImageView
                android:id="@+id/gmbjam"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_above="@+id/gmblokasi"
                android:layout_alignEnd="@+id/gmblokasi"
                android:layout_alignLeft="@+id/gmblokasi"
                android:layout_alignRight="@+id/gmblokasi"
                android:layout_alignStart="@+id/gmblokasi"
                android:layout_marginBottom="6dp"
                app:srcCompat="@drawable/ic_access_time_black_24px" />

            <TextView
                android:id="@+id/jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/gmbjam"
                android:layout_toEndOf="@+id/gmbjam"
                android:layout_toRightOf="@+id/gmbjam"
                android:text="TextView"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gmblokasi"
                android:layout_alignTop="@+id/gmblokasi"
                android:layout_toEndOf="@+id/gmblokasi"
                android:layout_toRightOf="@+id/gmblokasi"
                android:text="TextView"
                android:gravity="center"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/foto"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/nama"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                app:srcCompat="@drawable/ic_launcher_background" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>