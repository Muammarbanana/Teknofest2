<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="335dp"
        android:layout_height="128dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="128dp">


            <ImageView
                android:id="@+id/gambarfood"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/gambarfood"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/gambarfood"
                android:layout_toRightOf="@+id/gambarfood"
                android:fontFamily="@font/roboto_bold"
                android:text="TextView"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nama"
                android:layout_alignStart="@+id/nama"
                android:layout_below="@+id/nama"
                android:fontFamily="@font/roboto"
                android:text="TextView"
                android:textColor="#38D0A4"
                android:textSize="16dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>