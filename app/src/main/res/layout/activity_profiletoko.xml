<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmadmuammarfanani.teknofest2.Profiletoko"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.john.profile_toko.Profile_Toko">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logotoko"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="44dp"
                    android:src="@drawable/line"

                    />

                <ImageView
                    android:id="@+id/gambarpemilik"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@drawable/line" />
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:onClick="back"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/ic_arrow_back_black_24px"
                    />

            </FrameLayout>


            <!-- Nama Toko -->
            <TextView
                android:id="@+id/namatoko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:text="Cleo Mine"
                android:textColor="#687074"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hargamulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11dp"
                android:text="Start From Rp2000,-"
                android:textColor="#38D0A4"

                android:textSize="18dp" />

            <!-- Waktu -->
            <TextView

                android:id="@+id/waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="13dp"
                android:drawableLeft="@drawable/ic_access_time_black_24px"
                android:text="  07.00 - 17.00"


                />

            <!-- Lokasi -->
            <TextView
                android:id="@+id/lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_location_on_black_24px"
                android:text="Fakultas Informatika"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <!-- Deskripsi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Deskripsi"
                    android:textColor="#687074"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/deskripsitoko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:text="Masukan Deskripsi Produk Disini"
                    android:textColor="#687074" />

                <!-- Contact -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#687074"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <!-- Line Add -->
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:onClick="lineadd"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/line" />

                        <TextView
                            android:id="@+id/lineid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="LINE"
                            android:textSize="5dp" />

                    </LinearLayout>
                    <!-- Insta Add -->
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:onClick="instaadd"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/instagram" />

                        <TextView
                            android:id="@+id/instaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="Instagram"
                            android:textSize="5dp" />

                    </LinearLayout>
                    <!-- WA Add -->
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:onClick="waadd"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/whatsapp" />

                        <TextView
                            android:id="@+id/waid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="Whats Up"
                            android:textSize="5dp" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Makanan"
                        android:textColor="#687074"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="12dp"
                        android:text="See more"
                        android:onClick="seemore"/>

                </RelativeLayout>
                <!-- Buat Recycler view -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listmakanantoko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minuman"
                        android:textColor="#687074"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="12dp"
                        android:text="See more"
                        android:onClick="seemore"/>

                </RelativeLayout>


                <!-- Buat Recycler view -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listminumantoko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lainnya"
                        android:textColor="#687074"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="12dp"
                        android:text="See more"
                        android:onClick="seemore"/>

                </RelativeLayout>

                <!-- Buat Recycler view -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listlaintoko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
